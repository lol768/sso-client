<?xml version="1.0" encoding="UTF-8"?>
<config>
	<!-- Do you want to allow HTTP BASIC auth on this filter? -->
	<httpbasic>
		<allow>true</allow>
		<!-- list of protocols to allow BASIC auth over. You should ALWAYS use only HTTPS in production. However, you can use http in testing if you can't get https working on your machine -->
	</httpbasic>
	<mode>old</mode>
	<!--mode>new</mode-->
	<origin>
		<originid>urn:athensams.net:testFederation:moleman.warwick.ac.uk</originid>
		<login>
			<location>http://moleman.warwick.ac.uk/origin/hs</location>
		</login>
		<logout>
			<location>http://moleman.warwick.ac.uk/origin/logout</location>
		</logout>
		<attributeauthority>
			<location>https://moleman.warwick.ac.uk/origin/aa</location>
		</attributeauthority>
	</origin>
	<shire>
		<filteruserkey>SSO_USER</filteruserkey>
		<urlparamkey>requestedUrl</urlparamkey>
		<location>http://moleman.warwick.ac.uk/sso-client/shire</location>
		<sscookie>
			<name>SSO-SSC-SSOClient</name>
			<path>/sso-client</path>
			<domain>moleman.warwick.ac.uk</domain>
		</sscookie>
		<providerid>urn:moleman.warwick.ac.uk:sso-client:service</providerid>
		<keystore>
			<location>file:/j2sdk1.4.2_02/jre/lib/security/moleman.warwick.ac.uk.keystore</location>
			<password>changeit</password>
			<shire-alias>moleman.warwick.ac.uk</shire-alias>
			<origin-alias>moleman.warwick.ac.uk</origin-alias>
		</keystore>
	</shire>
	<cacertskeystore>
			<location>file:/j2sdk1.4.2_02/jre/lib/security/cacerts</location>
			<password>changeit</password>
	</cacertskeystore>
</config>